{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["DOM", "es2018"],
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {},
        "types": ["jest", "node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "cdk.out", ".aws-sam/", "*.config.ts", "tests"]
}
